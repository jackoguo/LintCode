#include <vector>

using namespace std;

class Solution {

private:
int find(vector<int> &A, int l, int r, int target) {
        if (l > r) {
            return -1;
        }
        int index = -1;
        if (A[l] <= A[r]) {
            int left = l, right = r, mid = 0;
            while (left <= right) {
                mid = (left + right) >> 1;
                if (A[mid] == target) {
                    index = mid;
                    break;
                }
                else if (A[mid] > target) {
                    right = mid - 1;
                }
                else {
                    left = mid + 1;
                }
            }
        }
        else {
            int mid = (l + r) >> 1;
            if (A[mid] == target) {
                index = mid;
            }
            else {
                index = find(A, l, mid - 1, target);
                index = index == -1 ? find(A, mid + 1, r, target) : index;               
            }
        }        
        return index;
}
public:
    int search(vector<int> &A, int target) {
        int n = A.size();
        return find(A, 0, n-1, target);
    }
};
